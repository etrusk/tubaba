{
  "name": "best-game-ever",
  "version": "1.0.0",
  "description": "A research-validated setup for AI-assisted development with Roo Code.",
  "type": "module",
  "scripts": {
    "dev": "npx serve -l 3000",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:critical": "vitest run --reporter=verbose",
    "type-check": "tsc --noEmit",
    "build": "tsc -p tsconfig.build.json",
    "lint": "eslint src/ tests/",
    "lint:fix": "eslint src/ tests/ --fix",
    "standards:check": "echo 'Standards validation:' && npm run lint && npm run type-check",
    "precommit": "npm run standards:check && npm run test:critical"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/etrusk/tubaba.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/etrusk/tubaba/issues"
  },
  "homepage": "https://github.com/etrusk/tubaba#readme",
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@vitest/ui": "^4.0.16",
    "eslint": "^9.39.2",
    "linkedom": "^0.18.12",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.50.1",
    "vitest": "^4.0.16"
  },
  "dependencies": {
    "immer": "^11.1.0"
  }
}
